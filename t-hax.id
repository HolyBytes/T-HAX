        *)
            show_warning "Fitur cek versi belum tersedia untuk tool '$1' atau tool tidak valid"
            echo -e "Tool yang didukung untuk cek versi:"
            echo -e "  - Evil-Droid    - Metasploit"
            echo -e "  - Sqlmap        - Zphisher"
            echo -e "  - Seeker        - Routersploit"
            echo -e "  - XSStrike      - Cupp"
            ;;
