            if command -v bettercap >/dev/null 2>&1; then
                show_success "Bettercap berhasil diinstall"
            else
                show_warning "Gagal menginstall Bettercap"
            fi
            ;;
        22) # Netdiscover
            show_info "Menginstall Netdiscover..."
            sudo apt-get install netdiscover -y
            if command -v netdiscover >/dev/null 2>&1; then
                show_success "Netdiscover berhasil diinstall"
            else
                show_warning "Gagal menginstall Netdiscover"
            fi
            ;;
               *)
            show_warning "Pilihan tidak valid! Silakan masukkan angka antara 1-22."
            ;;
    esac
}

# Fungsi utama
main() {
    # Buat log file jika belum ada
    touch installer.log
    echo "$(get_timestamp) ===== Memulai T-HAX Installer =====" >> installer.log

    while true; do
        display_banner
        show_table
        show_menu

        read -p $'\e[1;32mPilih menu [0-3]: \e[0m' menu_choice

        case $menu_choice in
            1) # Install Tool
                display_banner
                show_table
                read -p $'\e[1;32mPilih tool yang akan diinstall [1-22]: \e[0m' tool_choice
                install_tool $tool_choice
                ;;
            2) # Cek Versi Tool
                display_banner
                echo -e "\n\e[1;36mDaftar Tool yang bisa dicek versi:\e[0m"
                echo -e "1. Evil-Droid     4. Zphisher      7. XSStrike"
                echo -e "2. Metasploit     5. Seeker        8. Cupp"
                echo -e "3. Sqlmap         6. Routersploit"
                read -p $'\e[1;32mMasukkan nama tool (atau nomor): \e[0m' tool_name
                
                # Konversi angka ke nama tool jika perlu
                case $tool_name in
                    1) tool_name="Evil-Droid" ;;
                    2) tool_name="Metasploit" ;;
                    3) tool_name="Sqlmap" ;;
                    4) tool_name="Zphisher" ;;
                    5) tool_name="Seeker" ;;
                    6) tool_name="Routersploit" ;;
                    7) tool_name="XSStrike" ;;
                    8) tool_name="Cupp" ;;
                esac
                
                check_version "$tool_name"
                ;;
            3) # Update Tool
                display_banner
                echo -e "\n\e[1;36mDaftar Tool yang bisa diupdate:\e[0m"
                echo -e "1. Evil-Droid     4. Zphisher      7. XSStrike"
                echo -e "2. Metasploit     5. Seeker        8. Cupp"
                echo -e "3. Sqlmap         6. Routersploit"
                read -p $'\e[1;32mMasukkan nama tool (atau nomor): \e[0m' tool_name
                
                # Konversi angka ke nama tool jika perlu
                case $tool_name in
                    1) tool_name="Evil-Droid" ;;
                    2) tool_name="Metasploit" ;;
                    3) tool_name="Sqlmap" ;;
                    4) tool_name="Zphisher" ;;
                    5) tool_name="Seeker" ;;
                    6) tool_name="Routersploit" ;;
                    7) tool_name="XSStrike" ;;
                    8) tool_name="Cupp" ;;
                esac
                
                update_tool "$tool_name"
                ;;
            0) # Keluar
                echo -e "\n\e[1;32mTerima kasih telah menggunakan T-HAX Installer!\e[0m"
                echo "$(get_timestamp) ===== Keluar dari T-HAX Installer =====" >> installer.log
                exit 0
                ;;
            *)
                show_warning "Pilihan tidak valid! Silakan pilih 0-3."
                ;;
        esac

        read -p $'\e[1;33mTekan Enter untuk melanjutkan...\e[0m'
    done
}

# Jalankan fungsi utama
main
