# Fungsi untuk menginstall tools
install_tool() {
    echo -e "\n\e[1;36m╔════════════════════════════════════════╗"
    echo -e "║           INSTALL TOOL                ║"
    echo -e "╚════════════════════════════════════════╝\e[0m"
    
    case $1 in
        1) # Seeker
            show_info "Menginstall Seeker..."
            git clone https://github.com/thewhiteh4t/seeker.git
            if [ $? -eq 0 ]; then
                show_success "Seeker berhasil diinstall"
            else
                show_warning "Gagal menginstall Seeker"
            fi
            ;;
        2) # ngrok
            show_info "Menginstall ngrok..."
            wget https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip
            unzip ngrok-stable-linux-amd64.zip
            rm ngrok-stable-linux-amd64.zip
            if [ -f "ngrok" ]; then
                show_success "ngrok berhasil diinstall"
            else
                show_warning "Gagal menginstall ngrok"
            fi
            ;;
        3) # Metasploit
            show_info "Menginstall Metasploit Framework..."
            curl https://raw.githubusercontent.com/rapid7/metasploit-omnibus/master/config/templates/metasploit-framework-wrappers/msfupdate.erb > msfinstall
            chmod +x msfinstall
            ./msfinstall
            if command -v msfconsole >/dev/null 2>&1; then
                show_success "Metasploit berhasil diinstall"
            else
                show_warning "Gagal menginstall Metasploit"
            fi
            ;;
        4) # Hydra
            show_info "Menginstall Hydra..."
            sudo apt-get install hydra -y
            if command -v hydra >/dev/null 2>&1; then
                show_success "Hydra berhasil diinstall"
            else
                show_warning "Gagal menginstall Hydra"
            fi
            ;;
        5) # Sqlmap
            show_info "Menginstall Sqlmap..."
            git clone --depth 1 https://github.com/sqlmapproject/sqlmap.git
            if [ -d "sqlmap" ]; then
                show_success "Sqlmap berhasil diinstall"
            else
                show_warning "Gagal menginstall Sqlmap"
