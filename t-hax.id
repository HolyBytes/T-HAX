# Fungsi untuk update tool
update_tool() {
    echo -e "\n\e[1;36m╔════════════════════════════════════════╗"
    echo -e "║            UPDATE TOOL                ║"
    echo -e "╚════════════════════════════════════════╝\e[0m"
    
    case $1 in
        "Evil-Droid")
            if [ -d "evil-droid" ]; then
                cd evil-droid
                git pull origin master
                cd ..
                show_success "Evil-Droid telah diupdate"
            else
                show_warning "Evil-Droid belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "Metasploit")
            if command -v msfupdate >/dev/null 2>&1; then
                msfupdate
                show_success "Metasploit telah diupdate"
            else
                show_warning "Metasploit belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "Sqlmap")
            if [ -d "sqlmap" ]; then
                cd sqlmap
                git pull origin master
                cd ..
                show_success "Sqlmap telah diupdate"
            else
                show_warning "Sqlmap belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "Zphisher")
            if [ -d "zphisher" ]; then
                cd zphisher
                git pull origin master
                cd ..
                show_success "Zphisher telah diupdate"
            else
                show_warning "Zphisher belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "Seeker")
            if [ -d "seeker" ]; then
                cd seeker
                git pull origin master
                cd ..
                show_success "Seeker telah diupdate"
            else
                show_warning "Seeker belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "Routersploit")
            if [ -d "routersploit" ]; then
                cd routersploit
                git pull origin master
                pip install -r requirements.txt
                cd ..
                show_success "Routersploit telah diupdate"
            else
                show_warning "Routersploit belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "XSStrike")
            if [ -d "XSStrike" ]; then
                cd XSStrike
                git pull origin master
                pip3 install -r requirements.txt
                cd ..
                show_success "XSStrike telah diupdate"
            else
                show_warning "XSStrike belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        "Cupp")
            if [ -d "cupp" ]; then
                cd cupp
                git pull origin master
                cd ..
                show_success "Cupp telah diupdate"
            else
                show_warning "Cupp belum terinstall, silakan install terlebih dahulu"
            fi
            ;;
        *)
            show_warning "Fitur update belum tersedia untuk tool '$1' atau tool tidak valid"
            echo -e "Tool yang didukung untuk update:"
            echo -e "  - Evil-Droid    - Metasploit"
            echo -e "  - Sqlmap        - Zphisher"
            echo -e "  - Seeker        - Routersploit"
            echo -e "  - XSStrike      - Cupp"
            ;;
    esac
}

