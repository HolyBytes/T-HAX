#!/bin/bash

# Fungsi untuk mendapatkan timestamp
get_timestamp() {
    echo "[$(date +'%Y-%m-%d %H:%M:%S')]"
}

# Fungsi untuk menampilkan pesan peringatan
show_warning() {
    echo -e "\e[1;31m[!] PERINGATAN: $1\e[0m"
    echo "$(get_timestamp) WARNING: $1" >> installer.log
}

# Fungsi untuk menampilkan pesan informasi
show_info() {
    echo -e "\e[1;34m[i] INFO: $1\e[0m"
    echo "$(get_timestamp) INFO: $1" >> installer.log
}

# Fungsi untuk menampilkan pesan sukses
show_success() {
    echo -e "\e[1;32m[✓] SUKSES: $1\e[0m"
    echo "$(get_timestamp) SUCCESS: $1" >> installer.log
}

# Fungsi untuk mengecek versi tool
check_version() {
    echo -e "\n\e[1;36m╔════════════════════════════════════════╗"
    echo -e "║            CEK VERSI TOOL             ║"
    echo -e "╚════════════════════════════════════════╝\e[0m"
    
    case $1 in
        "Evil-Droid")
            if [ -d "evil-droid" ]; then
                cd evil-droid
                current_ver=$(git log -1 --format=%cd --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/M4sc3r4n0/evil-droid.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "Evil-Droid"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
            else
                show_warning "Tool Evil-Droid belum terinstall"
            fi
            ;;
        "Metasploit")
            if command -v msfconsole >/dev/null 2>&1; then
                current_ver=$(msfconsole -v | head -n 1)
                show_info "Metasploit Framework"
                echo -e "  └─ Versi saat ini : $current_ver"
            else
                show_warning "Tool Metasploit belum terinstall"
            fi
            ;;
        "Sqlmap")
            if [ -d "sqlmap" ]; then
                cd sqlmap
                current_ver=$(git log -1 --pretty=format:"%h - %ad" --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/sqlmapproject/sqlmap.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "Sqlmap"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
            else
                show_warning "Tool Sqlmap belum terinstall"
            fi
            ;;
        "Zphisher")
            if [ -d "zphisher" ]; then
                cd zphisher
                current_ver=$(git log -1 --pretty=format:"%h - %ad" --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/htr-tech/zphisher.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "Zphisher"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
            else
                show_warning "Tool Zphisher belum terinstall"
            fi
            ;;
        "Seeker")
            if [ -d "seeker" ]; then
                cd seeker
                current_ver=$(git log -1 --pretty=format:"%h - %ad" --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/thewhiteh4t/seeker.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "Seeker"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
            else
                show_warning "Tool Seeker belum terinstall"
            fi
            ;;
        "Routersploit")
            if [ -d "routersploit" ]; then
                cd routersploit
                current_ver=$(git log -1 --pretty=format:"%h - %ad" --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/threat9/routersploit.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "Routersploit"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
            else
                show_warning "Tool Routersploit belum terinstall"
            fi
            ;;
        "XSStrike")
            if [ -d "XSStrike" ]; then
                cd XSStrike
                current_ver=$(git log -1 --pretty=format:"%h - %ad" --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/s0md3v/XSStrike.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "XSStrike"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
            else
