                show_warning "Gagal menginstall Cupp"
            fi
            ;;
        19) # Evil-Droid
            show_info "Menginstall Evil-Droid..."
            git clone https://github.com/M4sc3r4n0/evil-droid.git
            cd evil-droid
            chmod +x evil-droid
            cd ..
            if [ -d "evil-droid" ]; then
                show_success "Evil-Droid berhasil diinstall"
            else
                show_warning "Gagal menginstall Evil-Droid"
            fi
            ;;
        20) # Routersploit
            show_info "Menginstall Routersploit..."
            git clone https://github.com/threat9/routersploit
            cd routersploit
            pip install -r requirements.txt
            cd ..
            if [ -d "routersploit" ]; then
                show_success "Routersploit berhasil diinstall"
            else
                show_warning "Gagal menginstall Routersploit"
            fi
            ;;
        21) # Bettercap
            show_info "Menginstall Bettercap..."
