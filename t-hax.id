            if [ -d "cupp" ]; then
                cd cupp
                current_ver=$(git log -1 --pretty=format:"%h - %ad" --date=short)
                latest_ver=$(git ls-remote --heads https://github.com/Mebus/cupp.git | grep "refs/heads/master" | cut -f 1)
                cd ..
                show_info "Cupp"
                echo -e "  ├─ Versi saat ini : $current_ver"
                echo -e "  └─ Versi terbaru  : $latest_ver"
